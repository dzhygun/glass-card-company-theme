{{#unless level}}
   <nav class="navbar js-navbar">
      <button
         class="navbar__toggle js-toggle nav-hover"
         aria-label="{{ translate 'partials.menu.label' }}"
         aria-haspopup="true"
         aria-expanded="false">
         <span class="navbar__toggle-box">
            <span class="navbar__toggle-inner">{{ translate 'partials.menu.label' }}</span>
         </span>
      </button>
   {{/unless}}
    <ul{{#if level}} class="navbar__submenu level-{{level}}" aria-hidden="true" {{else}} class="navbar__menu"{{/if}}>
        {{#each items}}
             <li {{menuItemClasses}}>
            {{#if link}}
               <a class="nav-hover "
                  href="{{menuUrl}}"
                  {{#if title}}
                     title="{{title}}"
                  {{/if}}
                  {{#if target}}
                     target="{{target}}"
                  {{/if}}
                  {{#if rel}}
                     rel="{{rel}}"
                  {{/if}}
                  {{#if items}} 
                     aria-haspopup="true"
                  {{/if}}>
                  {{label}}
              </a>
            {{else}}
               <span 
                  class="is-separator nav-hover "
                  {{#if title}}
                     title="{{title}}"
                  {{/if}} 
                  {{#if items}} 
                     aria-haspopup="true"
                  {{/if}}>
                  {{label}}
               </span>
            {{/if}}

            {{#if items}}
               {{> menu}}
            {{/if}}
         </li>
        {{/each}}
    </ul>
   {{#unless level}}
   </nav>
{{/unless}}
